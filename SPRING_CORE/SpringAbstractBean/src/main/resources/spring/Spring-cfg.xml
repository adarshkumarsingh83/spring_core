<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath*:/properties/application.properties"/>

    <bean id="abstractClass" class="com.adarsh.spring.service.construct.AbstractClass" abstract="true">
        <property name="name" value="${app.name}"/>
    </bean>

    <bean id="myClass" class="com.adarsh.spring.service.construct.MyClass" parent="abstractClass"/>

    <bean id="serviceClass" class="com.adarsh.spring.service.impl.ServiceClass">
        <property name="myClass">
            <ref bean="myClass"/>
        </property>

    </bean>

</beans> 


