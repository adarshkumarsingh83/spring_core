<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myServiceSingleTon" class="com.adarsh.spring.bean.MyServiceImpl"
          scope="singleton">
        <property name="message" value="Hi Adarsh myServiceSingleTon"/>
    </bean>

    <bean id="myServicePrototype" class="com.adarsh.spring.bean.MyServiceImpl"
          scope="prototype">
        <property name="message" value="Hi Adarsh myServicePrototype"/>
    </bean>
</beans>